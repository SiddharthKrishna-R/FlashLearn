<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="32dp"
    android:background="#FFEB3B"
    android:layout_marginBottom="16dp"
    android:id="@+id/flashcard_frame">

    <!-- Front of the Flashcard (Question) -->
    <LinearLayout
        android:id="@+id/flashcard_front"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/questionTextView"
            android:text="Sample Question"
            android:textSize="22sp"
            android:textColor="#000000"
            android:padding="16dp"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> <!-- Added layout_height -->
    </LinearLayout>

    <!-- Back of the Flashcard (Answer) -->
    <LinearLayout
        android:id="@+id/flashcard_back"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/answerTextView"
            android:text="Sample Answer"
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="16dp"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
